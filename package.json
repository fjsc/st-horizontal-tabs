{
  "name": "st-element-starter",
  "version": "0.1.0",
  "description": "boilerplate LitElement setup with TypeScript and postCSS",
  "scripts": {
    "start": "webpack-dev-server --config webpack.dev.config.cjs",
    "build": "standard-changelog && npm run clean && npm run build:element && npm run build:demo",
    "build:element": "webpack --config webpack.prod.config.cjs",
    "build:demo": "cross-env NODE_ENV=production webpack --config webpack.dev.config.cjs",
    "clean": "rimraf dist",
    "commit": "git-cz",
    "doc": "typedoc src",
    "test": "karma start karma.conf.cjs",
    "lint": "eslint src/**"
    "doc2": "typedoc src && concat-md --toc --decrease-title-levels --dir-name-as-title docs > README.md",
  },
  "contributors": [
    {
      "name": "Fran Sevilla",
      "email": "fjsc.noah@gmail.com",
      "url": "https://github.com/fjsc"
    },
    {
      "name": "Abimael Barea",
      "email": "elabi3@gmail.com",
      "url": "https://github.com/elabi3"
    }
  ],
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@open-wc/testing": "2.5.17",
    "@open-wc/testing-karma": "3.4.2",
    "@types/chai": "4.2.11",
    "@types/mocha": "7.0.2",
    "@typescript-eslint/eslint-plugin": "3.1.0",
    "@typescript-eslint/parser": "3.1.0",
    "autoprefixer": "9.8.0",
    "babel-loader": "^8.1.0",
    "chai": "4.2.0",
    "commitizen": "^4.1.2",
    "concat-md": "^0.3.5",
    "cross-env": "^7.0.2",
    "css-loader": "3.5.3",
    "eslint": "7.2.0",
    "eslint-plugin-html": "6.0.2",
    "generate-package-json-webpack-plugin": "^1.0.1",
    "html-webpack-harddisk-plugin": "1.0.1",
    "html-webpack-plugin": "4.3.0",
    "husky": "^4.2.5",
    "karma": "5.0.9",
    "karma-chai": "0.1.0",
    "karma-mocha": "2.0.1",
    "karma-typescript": "^5.0.3",
    "lit-analyzer": "1.1.11",
    "lit-css-loader": "0.0.3",
    "mocha": "7.2.0",
    "postcss-import": "12.0.1",
    "postcss-loader": "3.0.0",
    "postcss-nested": "4.2.1",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "puppeteer": "^3.3.0",
    "raw-loader": "^4.0.1",
    "rimraf": "^3.0.2",
    "standard-changelog": "^2.0.24",
    "style-loader": "1.2.1",
    "terser-webpack-plugin": "^3.0.3",
    "to-string-loader": "1.1.6",
    "ts-loader": "7.0.5",
    "typedoc": "^0.17.7",
    "typedoc-plugin-markdown": "^2.3.1",
    "typedoc-plugin-no-inherit": "^1.1.10",
    "typedoc-webpack-plugin": "^1.1.4",
    "typescript": "3.9.5",
    "web-component-analyzer": "1.0.3",
    "webpack": "4.43.0",
    "webpack-cli": "3.3.11",
    "webpack-dev-server": "3.11.0",
    "webpack-merge": "4.2.2"
  },
  "dependencies": {
    "@vanillawc/wc-markdown": "^1.5.7",
    "@vanillawc/wc-monaco-editor": "^1.10.1",
    "lit-element": "2.3.1"
  },
  "config": {
    "commitizen": {
      "path": "./.config/commitizen-format/st-commitizen.js"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "pretty-quick --staged && npm run lint",
      "pre-push": "npm run test && npm run build"
    }
  }
}

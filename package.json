    "html-webpack-plugin": "4.3.0",
    "karma": "5.0.9",
    "karma-chai": "0.1.0",
    "karma-mocha": "2.0.1",
    "karma-typescript": "^5.0.3",
    "lit-analyzer": "1.1.11",
    "lit-css-loader": "0.0.3",
    "mocha": "7.2.0",
    "postcss-import": "12.0.1",
    "postcss-loader": "3.0.0",

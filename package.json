      "url" : "https://github.com/elabi3"
    }
  ],
  "license": "MIT",
  "devDependencies": {
    "@open-wc/testing": "2.5.17",
    "@open-wc/testing-karma": "3.4.2",
    "@types/chai": "4.2.11",
    "@types/mocha": "7.0.2",
    "@typescript-eslint/eslint-plugin": "3.1.0",
    "@typescript-eslint/parser": "3.1.0",
    "autoprefixer": "9.8.0",
    "babel-loader": "^8.1.0",
    "chai": "4.2.0",
    "commitizen": "^4.1.2",
    "cross-env": "^7.0.2",
